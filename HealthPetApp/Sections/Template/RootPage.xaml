<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthPetApp.Sections.Template.RootPage"
              xmlns:components="clr-namespace:HealthPetApp.Sections.Template"
             BackgroundColor="#e0f5fe"
             >
    <Grid RowDefinitions="Auto,*,Auto">

        <!-- HEADER -->
        <Grid Grid.Row="0">

            <!-- HEADER PRINCIPAL -->
            <ContentView x:Name="HeaderMain">
                <components:HeaderComponent />
            </ContentView>

            <!-- HEADER SECUNDÁRIO -->
            <ContentView x:Name="HeaderSecondary"
                     IsVisible="False">
                <components:HeaderBackComponent />
            </ContentView>

        </Grid>

        <!-- CONTEÚDO DINÂMICO -->
        <ContentView 
        x:Name="ContentContainerLayout"
        Grid.Row="1"
        Margin="20,0"
        BackgroundColor="#e0f5fe"
        />

        <!-- FOOTER FIXO -->
        <components:MenuFooterPage
        x:Name="Footer"
        Grid.Row="2"/>

    </Grid>
</ContentPage>