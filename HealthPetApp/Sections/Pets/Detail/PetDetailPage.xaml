<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthPetApp.Sections.Pets.Detail.PetDetailPage"
             xmlns:components="clr-namespace:HealthPetApp.Sections.Template"
             xmlns:vm="clr-namespace:HealthPetApp.Sections.Pets.Detail"
             x:DataType="vm:PetDetailPageViewModel"
             >
        <ScrollView>
            <VerticalStackLayout Spacing="0">

                <!-- PET IMAGE CARD -->
                <Image 
                    Source="dogpuppy.png"
                    Aspect="AspectFill"
                    HeightRequest="350"
                    />

                <!-- MAIN WHITE CARD -->
                <Border
                BackgroundColor="White"
                StrokeShape="RoundRectangle 25"
                Margin="0,-25,0,0"
                Padding="25">

                    <VerticalStackLayout Spacing="18">

                        <!-- NAME + FAVORITE -->
                        <Grid ColumnDefinitions="*,Auto">

                            <VerticalStackLayout>
                                <Label 
                                Text="Orion Mau"
                                FontSize="22"
                                FontAttributes="Bold"/>

                                <HorizontalStackLayout Spacing="6">
                                    <Label 
                                    Text=""
                                    Style="{StaticResource MaterialIcon}"
                                    FontSize="16"
                                    TextColor="#999"/>
                                    <Label 
                                    Text="Noida sector 62"
                                    TextColor="#999"
                                    FontSize="13"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>

                            <Label 
                            Grid.Column="1"
                            Text=""
                            Style="{StaticResource MaterialIcon}"
                            FontSize="28"
                            TextColor="#FF6A6A"/>
                        </Grid>

                        <!-- DIVIDER -->
                        <BoxView HeightRequest="1" Color="#E8E8E8"/>

                        <!-- PET INFO TAGS -->
                        <Grid ColumnDefinitions="*,*,*"
                          RowDefinitions="Auto">

                            <Border Grid.Column="0"
    Margin="10,0"
                                StrokeShape="RoundRectangle 10"
                                Padding="8,4">
                            <VerticalStackLayout HorizontalOptions="Center" Spacing="4">
                                    <Label Text="Age" HorizontalTextAlignment="Center" FontAttributes="Bold"/>
                                    <Label Text="3 months"/>
                                </VerticalStackLayout>
                            </Border>

                            <Border Grid.Column="1"
                                    Margin="10,0"
                                StrokeShape="RoundRectangle 10"
                                Padding="8,4">
                            <VerticalStackLayout HorizontalOptions="Center" Spacing="4">
                                    <Label Text="Sex" FontAttributes="Bold"/>
                                    <Label Text="Male"/>
                                </VerticalStackLayout>
                            </Border>

                            <Border Grid.Column="2"
                                    Margin="10,0"
                                StrokeShape="RoundRectangle 10"
                                Padding="8,4">
                            <VerticalStackLayout HorizontalOptions="Center" Spacing="4">
                                    <Label Text="Breed" FontAttributes="Bold"/>
                                    <Label Text="Persian"/>
                                </VerticalStackLayout>
                            </Border>

                        </Grid>

                        <!-- SUMMARY -->
                        <Label Text="Summary"
                           FontSize="18"
                           FontAttributes="Bold"/>

                        <Label Text="There are many variations of passages of Lorem Ipsum available,
but the majority have suffered alteration in some form."
                           FontSize="14"
                           TextColor="#666"/>

                        <!-- OWNER -->
                        <Grid ColumnDefinitions="Auto,*" Margin="0,10,0,0">

                            <HorizontalStackLayout Grid.Column="0" Spacing="10">
                                <Image 
                                Source="owner_sample.png"
                                WidthRequest="40"
                                HeightRequest="40"
                                Aspect="AspectFill"
                                />
                            </HorizontalStackLayout>

                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                <Label Text="Roselia Drew" FontAttributes="Bold"/>
                                <Label Text="Owner" FontSize="12" TextColor="#777"/>
                            </VerticalStackLayout>

                        </Grid>

                        <!-- BUTTON -->
                        <Button 
                        Text="Contact me"
                        BackgroundColor="#00D4C3"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="45"
                        />

                    </VerticalStackLayout>

                </Border>

            </VerticalStackLayout>
        </ScrollView>
</ContentView>
